<div class="col-md-4 col-md-offset-4">
  <h2>修改职位</h2>

  <%= simple_form_for [:admin, @job] do |f| %>


    <%= f.input :title, :label => "职位名称" %>

    <%= f.input :description, :label => "职位描述"  %>
    <br>
    <%= f.submit 'Submit', :data => {disable_with: "Submitting..."} %>
  <% end %>

</div>
